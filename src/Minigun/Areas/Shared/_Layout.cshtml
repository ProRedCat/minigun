<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Minigun - @ViewData["Title"]</title>
    
    <script src="https://unpkg.com/htmx.org@2.0.2"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-crosshair"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/tailwind.css" asp-append-version="true"/>
</head>
    <body>
        <div class="flex max-w-screen max-h-screen overflow-hidden">
            <aside>
                @await Html.PartialAsync("/Areas/Shared/_SideNav.cshtml")
            </aside>
            <main role="main" class="overflow-hidden w-full">
                <div id="application-dropdown">
                    @await Component.InvokeAsync("ApplicationDropdown")
                </div>
                
                @RenderBody()
            </main>
        </div>
    </body>
</html>